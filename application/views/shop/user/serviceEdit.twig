{%  extends "/shop/layout/layout.twig" %}
{% set page_header_title = '新增服务项' %}
{% set page_tag = 'shop_user_service' %}
{% block static %}
    <link href="/static/lib/jqvalidation/css/validationEngine.jquery.css" rel="stylesheet">
    <script type="text/javascript" src="/static/dropzone/dropzone.js"></script>
    <link rel="stylesheet" href="/static/dropzone/dropzone.css">
{%endblock %}
{% block main %}
    <div class='work-copy'>
        <form class="form-horizontal" action="" role="form"  method='post' enctype="multipart/form-data" >
            <div class="form-group">
                <label class="col-md-2 control-label">服务项目</label>
                <div class="col-md-4">
                    <input type='text' name='name' data-validation-engine="validate[required]"   class='form-control' value="{{ service.name }}" />
                    <input type="hidden" name='id' vlaue="{{ service.id}}" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">售价</label>
                <div class="col-md-4">
                    <input type='text' name='price' data-validation-engine="validate[required]"   class='form-control' value='{{ service.price }}'/>
                </div>
            </div>
           <!-- <div class="form-group">
                <label class="col-md-2 control-label">原价</label>
                <div class="col-md-4">
                    <input type='text' name='mprice' data-validation-engine="validate[required]"   class='form-control'  />
                </div>
            </div>
        -->
            <div class="form-group">
                <label class="col-md-2 control-label">服务时长</label>
                <div class="col-md-4">
                    <input type='text' name='stime' data-validation-engine="validate[required]"   class='form-control'  value="{{service.stime }}"/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">封面</label>
                <div class="col-md-4">
                    <input name="cover" type="hidden" value="{{ service.cover }}"/>
                    <div id="my-dropzone" class="dropzone" >
                        <img id="pic-img" src="{{ service.cover }}" />
                    </div>
                     <a href="javascript:void(0)" id="clear_button" class="easyui-linkbutton dropzone-reset" iconCls="icon-clear">重置图片</a>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">功效</label>
                <div class="col-md-4">
                     <textarea name="efficacy" style="width:100%;height: 160px;" >{{ service.efficacy }}</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">禁忌</label>
                <div class="col-md-4">
                    <textarea name="taboo" style="width:100%;height: 160px;" >{{ service.taboo }}</textarea>
                </div>
            </div>
             <div class="form-group">
                <label class="col-md-2 control-label">上门</label>
                <div class="col-md-4">
                    <label class="radio-inline">
                       <input type="radio" name="isVisit"  value="1" {% if service.isVisit=="1"%} checked="checked" {% endif %}> 是
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="isVisit"  value="0" {% if service.isVisit=="0"%} checked="checked" {% endif %}> 否
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">状态</label>
                <div class="col-md-4">
                    <label class="radio-inline">
                       <input type="radio" name="status"  value="1" {% if service.status=="1"%} checked="checked" {% endif %}> 启用
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="status"  value="0" {% if service.status=="1"%} checked="checked" {% endif %}> 禁用
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type='submit' id='submit' class='btn btn-primary' value='保存' data-loading='稍候...' /> 
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript" src="/static/lib/jqform/jquery.form.js"></script>
    <script type="text/javascript" src="/static/lib/jqvalidation/js/languages/jquery.validationEngine-zh_CN.js"></script>
    <script type="text/javascript" src="/static/lib/jqvalidation/js/jquery.validationEngine.js"></script>
    <script>
        $(function () {
            $('form').validationEngine();
            $('form').ajaxForm({
                beforeSubmit: function (formData, jqForm, options) {
                },
                success: function (data) {
                    if (data.status) {
                        layer.alert(data.msg, {icon: 6});
                    } else {
                        layer.alert(data.msg, {icon: 5});
                        history.go(-1);
                    }
                }
            });
             
            
        });

        var dz = new Dropzone("div#my-dropzone", {
                maxFiles: 1,
                url: "/shop/user/doUpload",
                dictDefaultMessage: '点击选择文件或拖动文件到这里上传',
                uploadMultiple: false, //是否支持多文件上传
                dictRemoveFile: true,
                init: function () {
                    this.on("success", function (file, res) {
                        if (res.status === true) {
                             $('#pic-img').remove();
                             layer.alert(res.msg);
                            $("input[name='cover']").val(res.url);
                        } else {
                            layer.alert(res.msg);
                            this.removeFile(file);
                        }
                    });
                    this.on("maxfilesexceeded", function (file) {
                        layer.alert('只允许单张上传');
                        this.removeFile(file);
                    });
                },
            });
            
            $('.dropzone-reset').click(function(){
               $('#pic-img').remove();
               dz.removeAllFiles(true); 
            });

        
    </script>
{% endblock %}